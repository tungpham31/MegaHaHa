<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/af_bg2"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/af_bg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/af_bg2"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/af_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/af_icon" >

        <ImageView
            android:id="@+id/af_emo"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:alpha="0.75" />

        <ImageView
            android:id="@+id/af_emo_rl"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/af_close1"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingLeft="23dp"
            android:paddingBottom="23dp" />

        <TextView
            android:id="@+id/af_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/af_emo_rl"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/af_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/af_title"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/af_emo_rl"
            android:textColor="#FFcac8c8"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>